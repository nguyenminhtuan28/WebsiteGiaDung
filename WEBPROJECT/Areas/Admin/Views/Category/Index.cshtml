@model IEnumerable<CategoryModel>
@{
    ViewData["title"] = "Category Listed";
}
<h3>list Category</h3>
<a asp-action="Create" asp-controller="Category">ADD Category</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Category Name</th>
            <th scope="col">Category Description</th>
            <th scope="col">Product Slug</th>
            <th scope="col">Category status</th>
            



        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                
                <td>@item.Slug</td>
               <td>
                   @if(item.Status==1)
                    {
                        <span class="text text-success">HIỂN THỊ</span>
                    }
                    else
                    {
                        <span class="text text-danger">ẨN</span>

                    }
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Category" asp-route-Id="@item.Id">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-controller="Category" asp-route-Id="@item.Id">Delete</a>

                </td>
            </tr>
        }


    </tbody>
</table>